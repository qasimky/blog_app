<div class='container'>

    <div class='row justify-content-center'>
        <div class='col-10'>

            <%= render 'shared/errors/' %>
            <%=form_with(model: @artical, class:'shadow p-3 mb-3 bg-info rounded',local: true) do |f| %>

                    <div class='form-group row'>
                            <%=f.label :title, class:'col-2 col-form-label text-light' %>
                        <div class='col-10'> 
                            <%=f.text_field :title, class:'form-control shadow rounded', placeholder: "Title of Artical"%>
                        </div>
                    </div>
                <div class='form-group row'>
                        <%=f.label :description , class:'col-2 col-form-label text-light'%><br>
                    <div class='col-10 my-2'> 
                        <%=f.text_area :description, rows: 10, class:'form-control shadow rounded', placeholder: "Description of new artical"%>
                    </div>
                </div>
                <div class='form-group row justify-content-center'>
                    <div class='col-12 text-center'>
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
                </div>
            <% end %>
        </div>
        <div class='col-12 text-center mb-3'>
            <%= link_to '[Return to artical]', articals_path,class:'text-info'%>
        </div>
        
    </div>
 </div>